<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:gravity="center"
    android:minWidth="@dimen/res_width_title_bar_item"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/title_item_iv_left"
        android:layout_width="@dimen/res_width_title_bar_item_image"
        android:layout_height="@dimen/res_height_title_bar_item_image" />

    <LinearLayout
        android:id="@+id/title_item_ll_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_item_tv_top"
            style="@style/res_text_title_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="top" />

        <TextView
            android:id="@+id/title_item_tv_bot"
            style="@style/res_text_title_bar_sub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bottom" />
    </LinearLayout>

    <ImageView
        android:id="@+id/title_item_iv_right"
        android:layout_width="@dimen/res_width_title_bar_item_image"
        android:layout_height="@dimen/res_height_title_bar_item_image" />

</LinearLayout>